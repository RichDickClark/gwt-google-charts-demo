 */
package edu.mit.ll.CDRS.ACASUA;

import edu.mit.ll.CDRS.DiscreteTimeSimulation;

/**
 * @author ri18384
 *
 */
public class ACASUASimulation extends DiscreteTimeSimulation {

	public ACASUASimulation()
	{
		// Define the quantities we want to keep track of
		new Metric("E.0") { 			
			@Override public double calculate() {
				return ownship.eastPosition;
			}  };
		new Metric("horizontal_range") {
			@Override public double calculate() {
				double dE = ownship.eastPosition-intruder.eastPosition;
				double dN = ownship.northPosition-intruder.northPosition;
				return Math.sqrt( dE*dE + dN*dN );
			} };
	}
	
	private Aircraft ownship;
	private Aircraft intruder;
	
	class Results extends DiscreteTimeSimulation.Results
	{
		
	}
	
}
