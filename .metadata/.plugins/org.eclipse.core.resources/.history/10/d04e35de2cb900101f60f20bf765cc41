package com.flyingsloth.financial.data;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.util.Collection;
import java.util.Date;
import java.util.Iterator;

public class DateDoubleList implements java.io.Serializable {
	/**
	 * 
	 */
	private static final long serialVersionUID = -6181957788758236607L;

	public DateDoubleList( Collection<DateDouble> src ) {
		data = src;
	}
	
	// Read in object from file
	public DateDoubleList( String filename ) throws FileNotFoundException, IOException {
		ObjectInputStream in = new ObjectInputStream( new FileInputStream( filename ) );
		DateDoubleList src = (DateDoubleList)in.readObject();
		
		
	}
	
	public Date[] getDates() {
		Date[] result = new Date[data.size()];
		Iterator<DateDouble> src_it = data.iterator();
		for( int k = 0; k < data.size(); ++k )
		{
			result[k] = src_it.next().date;
		}
		return result;
	}
	
	public double[] getDateNums() {
		double[] result = new double[data.size()];
		Iterator<DateDouble> src_it = data.iterator();
		for( int k = 0; k < data.size(); ++k )
		{
			result[k] = com.flyingsloth.ConvertToMatlab.convert(src_it.next().date);
		}
		return result;		
	}
	
	public double[] getValues() {
		double[] result = new double[data.size()];
		Iterator<DateDouble> src_it = data.iterator();
		for( int k = 0; k < data.size(); ++k )
		{
			result[k] = src_it.next().value;
		}
		return result;		
	}
	
	private Collection<DateDouble> data;
}
