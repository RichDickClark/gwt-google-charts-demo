package com.williams;

import java.net.MalformedURLException;

public abstract class UrlOpener {

	public static UrlOpener create() {
		switch( System.getProperty("os.name") ) {
			case "Mac OS X":
				return new OSXUrlOpener();
			default:
				throw new RuntimeException("Unrecognized operating system \"" + System.getProperty("os.name") + "\"" );				
		}
	}
	
	public abstract void open( String url ) throws MalformedURLException;
	
}
